@{
    ViewData["Title"] = "Create / Edit";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Spender.Models.Expense

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="display-4">Create or edit expense</h2>
                </div>
                <div class="card-body">
                    <form asp-action="CreateEditForm" asp-controller="Home" method="post">
                       <div asp-validation-summary="All" class="text-danger">

                       </div>
                        <!-- Keep Id hidden -->
                        <input asp-for="Id" type="hidden" />

                        <div class="form-group mb-3">
                            <label asp-for="Value" class="form-label"></label>
                            <input asp-for="Value" class="form-control" placeholder="0.00" type="number" step="0.01" />
                            <span asp-validation-for="Value" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="description" class="form-label"></label>
                            <input asp-for="description" class="form-control" placeholder="Enter description" />
                            <span asp-validation-for="description" class="text-danger"></span> 
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                        <button type="submit" class="btn btn-primary ">Submit</button>
                        <button  asp-action="Expenses" class="btn btn-secondary ">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>



@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}